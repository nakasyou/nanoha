{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "question": {
        "type": "string",
        "description": "問題文"
      },
      "explanation": {
        "type": "string",
        "description": "不正解時に表示される解説"
      },
      "choices": {
        "type": "array",
        "description": "選択肢。2個から5個まで",
        "items": {
          "type": "string"
        }
      },
      "corrects": {
        "type": "array",
        "description": "正解の選択肢のインデックス。完答形式。",
        "items": {
          "type": "number"
        }
      }
    },
    "required": ["question", "explanation", "choices", "corrects"]
  }
}
